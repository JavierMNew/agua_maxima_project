                    <Table title1="id" title2="Nombre del producto" title3="Stock" title4="Precio" title5="Acción" description1="Garrafón de 20 L (solo líquido)" description2="Garrafón de 20 L (solo garrafón)" description3="Garrafón de 20 L (garrafón + líquido)" /> -->
                </div>
            </SectionMain>
        </SectionContainer>
    </main>
</Layout>
